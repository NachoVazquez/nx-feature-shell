{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-feature-shell-variation/booking/feature-shell": [
        "libs/booking/feature-shell/src/index.ts"
      ],
      "@nx-feature-shell-variation/booking/feature-flight-search": [
        "libs/booking/feature-flight-search/src/index.ts"
      ],
      "@nx-feature-shell-variation/booking/feature-passenger-info": [
        "libs/booking/feature-passenger-info/src/index.ts"
      ],
      "@nx-feature-shell-variation/shared/feature-seat-listing": [
        "libs/shared/feature-seat-listing/src/index.ts"
      ],
      "@nx-feature-shell-variation/shared/ui": ["libs/shared/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
